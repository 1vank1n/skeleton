.subnav
	margin 0
	padding 0
	list-style none

	&-fixed
		position fixed !important

	&-fly
		position absolute
		width 180px
		margin-top -10px

		@media (max-width $screen-xs-max)
			display none

		@media (min-width $screen-xs-max) and (max-width $screen-md-max)
			width 140px

		.subnav__item:nth-last-child(1)
			.subnav__link
				border-bottom 0


	&__link
		position relative
		display block
		padding-top 15px
		padding-bottom 15px
		padding-left 20px
		border-bottom 1px solid rgba(16, 16, 16, .15)
		color #646464

		&:hover,
		&:focus
			text-decoration

		&:before
			content ''
			display block
			position absolute
			left 0
			top 50%
			width 3px
			height 3px
			margin-top -2px
			border-radius 50%
			background-color $link-color
