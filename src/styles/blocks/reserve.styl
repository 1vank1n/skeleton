.reserve
	display flex
	align-items center
	position fixed
	top 0
	right 0
	left 0
	border-bottom 1px solid alpha($link-color, .6)
	background-color #f5f5f5
	font-size 1.7rem
	z-index 90


	&__price
		display flex
		align-items center
		height 50px
		padding-left 50px
		padding-right 50px
		box-shadow 1px 0 0 0 alpha($link-color, .6)

		@media (max-width $screen-xs-max)
			display none


	&__man
		display inline-block
		width 18px
		height 23px
		margin-right 2px
		background-image url('../images/reserve/reserve__man.png')
		background-size 100%

		&:nth-last-child(1)
			margin-right 20px

	&__close
		display inline-block
		width 50px
		height 50px
		margin-left auto
		background-color $link-color
		background-image url('../images/reserve/reserve__close.svg')
		background-size 20px
		background-repeat no-repeat
		background-position center

		&:hover,
		&:focus
			opacity .7


	&__result
		position relative
		padding 12px 35px 12px 50px
		color $link-color

		&:before
			content ''
			display block
			position absolute
			top 22px
			left 0
			width 25px
			height 1px
			background-color alpha($link-color, .6)

		@media (max-width $screen-xs-max)
			text-align center
			padding 25px

			&:before
				display none
