.menu
	visibility hidden

	&-show
		visibility visible

		.menu__panel
			transform translateX(0)

		.menu__overlay
			opacity 1


	&__panel
		display flex
		flex-direction column
		justify-content space-between
		position fixed
		top 0
		bottom 0
		left 0
		transform translateX(-340px)
		width 340px
		padding 40px 30px
		background-color #fff
		overflow-y auto
		z-index 100
		transition .3s all ease

		@media (max-width $screen-xs-max)
			display block
			max-width 100%


	&__overlay
		display block
		position fixed
		top 0
		right 0
		bottom 0
		left 0
		background-color rgba(0, 0, 0, .5)
		opacity 0
		z-index 99
		transition .3s all ease


	&__close
		display block
		width 20px
		height 20px
		margin-bottom 20px
		background-image url('../images/menu/menu__close.svg')
		background-size 100%
		opacity .25
		transition .2s all ease

		&:hover,
		&:focus
			opacity 1


	&__nav
		margin 0
		padding 0
		list-style none


	&__nav
		font-size 1.9rem


	&__item:nth-last-child(1)
		.menu__link
			border-bottom 0

	&__link
		display block
		padding-top 15px
		padding-bottom 15px
		border-bottom 1px solid rgba(16, 16, 16, .15)
		color #000

		&:hover,
		&:focus
			text-decoration none


	&__bottom
		display flex
		flex-direction row
		align-items center
		justify-content space-between
		margin-top 20px


	&__social
		font-size 0
		filter invert(100%)


	&__lang
		color #646464

		.header__lang_item
			color #646464

			&-active
				color #000
