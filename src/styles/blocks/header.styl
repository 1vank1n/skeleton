$header-height ?= 100px


.header
	display flex
	align-items center
	justify-content space-between
	height $header-height
	background-color #000
	font-size 1.7rem
	color #fff

	&-fixed
		position fixed
		left 0
		top 0
		right 0
		height 52px
		z-index 70
		transform translateY(-200px)
		transition .3s all ease

		&-show
			transform translateY(0)

		.header__menu,
		.header__right,
		.header__phone,
		.header__delivery
			height 52px

		.header__delivery
			span
				margin-top -10px


	&__left
		display flex
		flex-direction row


	&__menu
		display flex
		align-items center
		justify-content center
		height $header-height
		padding 0 30px
		border-right 1px solid rgba(255, 255, 255, .18)
		color rgba(255, 255, 255, .4)

		&:before
			content ''
			width 30px
			height 16px
			margin-right 20px
			background-image url('../images/header/header__menu.svg')
			background-size 100%
			opacity .5
			transition .2s all ease

		&:hover,
		&:focus
			text-decoration none
			color rgba(255, 255, 255, 1)

			&:before
				opacity 1

		@media (max-width $screen-xs-max)
			border-right 0
			font-size 0

			&:before
				margin-right 0


	&__lang
		display flex
		align-items center
		justify-content center
		height $header-height
		padding 0 42px
		color rgba(255, 255, 255, .2)

		@media (max-width $screen-xs-max)
			display none

		&_item
			padding 0 8px
			color rgba(255, 255, 255, .2)

			&-active
				color rgba(255, 255, 255, .4)

			&:hover,
			&:focus
				border-bottom 0
				color rgba(255, 255, 255, 1)


	&__logo
		display block
		width 175px
		height 55px
		background-image url('../images/header/header__logo.png')
		background-size 100%

		&:hover,
		&:focus
			border-bottom 0

		@media (max-width $screen-xs-max)
			width 57px
			background-image url('../images/header/header__logo-mobile.png')



	&__right
		display flex
		flex-direction row


	&__phone
		display flex
		align-items center
		justify-content center
		height $header-height
		padding 0 50px
		font-size 1.7rem
		color rgba(255, 255, 255, .4)

		span
			position relative
			top -6px
			margin-right 5px
			font-size 1.4rem
			color rgba(255, 255, 255, .25)
			transition .2s all ease

		&:hover,
		&:focus
			text-decoration none
			color rgba(255, 255, 255, 1)

			span
				color rgba(255, 255, 255, 1)

		@media (max-width $screen-xs-max)
			display none


	&__delivery
		display flex
		align-items center
		justify-content center
		padding 0 30px
		border-left 1px solid rgba(255, 255, 255, .18)
		transition .2s all ease

		&:before
			content ''
			display block
			height 24px
			width 39px
			background-image url('../images/header/header__delivery.svg')
			background-size 100%
			opacity .5
			transition .2s all ease

		span
			position absolute
			width 24px
			height 24px
			margin-top -25px
			margin-left 25px
			border-radius 50%
			background-color rgba(255, 255, 255, .2)
			text-align center
			line-height 24px
			font-size 1.4rem
			color rgba(255, 255, 255, .5)
			transition .2s all ease

		&:hover
			&:before
				opacity 1

			span
				background-color rgba(255, 255, 255, .4)
				color rgba(255, 255, 255, .75)

		@media (max-width $screen-xs-max)
			border-left 0
