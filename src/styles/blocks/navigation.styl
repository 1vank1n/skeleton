.navigation
	position relative
	z-index 50

	@media (max-width $screen-xs-max)
		display none

	&-black
		.navigation__ul
			border-bottom 1px solid rgba(0, 0, 0, .15)

		.navigation__li:after
			color rgba(0, 0, 0, .15)

		.navigation__a
			color #000

			&:hover,
			&:focus
				color rgba(0, 0, 0, .5)

	&__ul
		display flex
		align-items center
		justify-content center
		height 50px
		margin 0
		padding 0
		border-bottom 1px solid rgba(255, 255, 255, .3)
		list-style none
		text-align center


	&__li
		display inline-block
		position relative
		margin-left 20px
		margin-right 20px

		&:after
			content '/'
			position absolute
			right -25px
			top -5px
			font-size 2rem
			color rgba(255, 255, 255, .3)

		&:nth-last-child(1)
			&:after
				display none


	&__a
		letter-spacing 1px
		text-transform uppercase
		font-size 1.7rem
		color rgba(255, 255, 255, 1)

		&:hover,
		&:focus
			color rgba(255, 255, 255, .5)
